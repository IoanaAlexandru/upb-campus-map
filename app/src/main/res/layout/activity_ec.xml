<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ec_container"
        tools:context=".EcActivity"
        android:background="@color/colorWhite">

    <!-- Dummy item to prevent SearchView from receiving focus -->
    <LinearLayout
            android:id="@+id/focus_dummy"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"
            android:orientation="horizontal"/>

    <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ec_search"
            android:queryHint="Search..."
            android:iconifiedByDefault="false"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:background="@drawable/bg_round">
    </SearchView>

    <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ecImage"
            android:contentDescription="@string/ec"
            android:background="@android:color/white"/>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="52dp" android:layout_height="wrap_content"
                  android:layout_margin="16dp"
                  android:layout_alignParentBottom="true"
                  android:layout_alignParentEnd="true"
                  android:id="@+id/ec_floor_tabs">
        <TabWidget android:id="@android:id/tabs"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:visibility="gone"/>
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:orientation="vertical">
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1.0"
                    android:id="@+id/ec_floor1"
                    android:text="@string/_1"
                    android:background="@color/colorGray"
                    android:textColor="@color/colorBlack"
                    android:textSize="18sp"/>
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1.0"
                    android:id="@+id/ec_floor2"
                    android:background="@color/colorWhite"
                    android:text="@string/_2"
                    android:textColor="@color/colorDarkGray"
                    android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>